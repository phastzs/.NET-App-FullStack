@model PagedList.IPagedList<KT0720NguyenHungPhat_63131016.Models.SinhVien>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Danh sách sinh viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .pagination-container {
        text-align: center;
    }

        .pagination-container ul.pagination {
            display: inline-block;
            margin: 0;
            padding: 0;
        }

            .pagination-container ul.pagination li {
                display: inline;
                margin-right: 5px;
            }

                .pagination-container ul.pagination li a {
                    text-decoration: none;
                    padding: 5px 10px;
                    border: 1px solid #ccc;
                    background-color: #f5f5f5;
                    color: #333;
                }

                .pagination-container ul.pagination li.active a {
                    background-color: #007bff;
                    color: #fff;
                    border-color: #007bff;
                }

                .pagination-container ul.pagination li.disabled a {
                    pointer-events: none;
                    cursor: not-allowed;
                    background-color: #eee;
                    color: #666;
                    border-color: #ddd;
                }

</style>

<h3>DANH SÁCH SINH VIÊN</h3>
<table class="table">
    <thead>
        <tr>
            <th>
                STT
            </th>
            <th>
                Mã SV
            </th>
            <th>
                Họ sinh viên
            </th>
            <th>
                Tên sinh viên
            </th>
            <th>
                Giới tính
            </th>
            <th>
                Ngày sinh
            </th>
            <th>
                Ảnh SV
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                Lớp
            </th>
            <th>
                Chi tiết
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
        }
        @foreach (var sinhVien in Model)
        {
            <tr>
                <td>
                    @{i++;}
                    @i
                </td>
                <td>
                    @Html.DisplayFor(modelItem => sinhVien.MaSV)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => sinhVien.HoSV)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => sinhVien.TenSV)
                </td>
                <td>
                    @{
                        string gtinh = sinhVien.GioiTinh == true ? "Nam" : "Nữ";
                    }
                    @gtinh
                </td>
                <td>
                    @Html.DisplayFor(modelItem => sinhVien.NgaySinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => sinhVien.AnhSV)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => sinhVien.DiaChi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => sinhVien.Lop.TenLop)
                </td>
                <td>
                    @Html.ActionLink("Xem chi tiết", "Details", new { id = sinhVien.MaSV })
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination-container">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded })
</div>
